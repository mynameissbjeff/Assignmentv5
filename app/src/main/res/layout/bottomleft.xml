<?xml version="1.0" encoding="utf-8"?>

<!-- create bottom part of the program -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/linearLayoutPlayer1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightpink"
    android:gravity="bottom">

    <!-- left button(correct) -->
    <ImageButton
        android:id="@+id/imageButtonTrue1"
        android:layout_width="wrap_content"
        android:layout_height="128dp"
        android:layout_weight="1"
        android:background="@color/truegreen"
        android:contentDescription="@string/selecttrue"
        android:onClick="buttonAnss"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/ic_check_white_24dp" />

    <!-- right button(wrong) -->
    <ImageButton
        android:id="@+id/imageButtonFalse1"
        android:layout_width="wrap_content"
        android:layout_height="128dp"
        android:layout_weight="1"
        android:background="@color/falsered"
        android:contentDescription="@string/selectfalse"
        android:onClick="buttonAnss"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/ic_close_white_24dp" />

</LinearLayout>